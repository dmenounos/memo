<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC 
	"-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN" 
	"http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>

	<!-- MAIN TEMPLATE -->

	<definition name="main-template" template="/WEB-INF/jsp/memo/admin/web/server/view/MainTemplate.jsp" />

	<definition name="/" extends="main-template">
		<put-attribute name="content" value="/WEB-INF/jsp/memo/admin/web/server/AdminController_doRoot.jsp" />
	</definition>

	<!-- EXCEPTION TEMPLATE -->

	<definition name="exception-template" template="/WEB-INF/jsp/memo/domain/web/server/view/ExceptionTemplate.jsp" />

	<!-- view name defined in memo-domain-mvc.xml -->
	<definition name="/web/any-exception" extends="exception-template">
		<put-attribute name="body" value="/WEB-INF/jsp/mojo/web/view/AnyException.jsp" />
	</definition>

	<!-- view name defined in memo-domain-mvc.xml -->
	<definition name="/web/web-exception" extends="exception-template">
		<put-attribute name="body" value="/WEB-INF/jsp/mojo/web/view/WebException.jsp" />
	</definition>

</tiles-definitions>
