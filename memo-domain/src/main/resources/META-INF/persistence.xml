<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">

	<persistence-unit name="DEFAULT" transaction-type="RESOURCE_LOCAL">

		<provider>org.hibernate.ejb.HibernatePersistence</provider>

		<class>memo.domain.dao.model.core.Permission</class>
		<class>memo.domain.dao.model.core.Resource</class>
		<class>memo.domain.dao.model.misc.Country</class>
		<class>memo.domain.dao.model.misc.Language</class>
		<class>memo.domain.dao.model.post.PostInfo</class>
		<class>memo.domain.dao.model.user.OpenID</class>
		<class>memo.domain.dao.model.user.User</class>
		<class>memo.domain.dao.model.user.UserRole</class>

		<exclude-unlisted-classes />

	</persistence-unit>

</persistence>
