<tiles-definitions>

	<!-- MAIN TEMPLATE -->

	<definition name="main-template" template="/WEB-INF/jsp/memo/portal/web/server/view/MainTemplate.jsp" />

	<definition name="/" extends="main-template">
		<put-attribute name="content" value="/WEB-INF/jsp/memo/portal/web/server/PortalController_doRoot.jsp" />
	</definition>

	<definition name="/test/login.pro" extends="main-template">
		<put-attribute name="content" value="/WEB-INF/jsp/memo/portal/web/server/test/TestController_doLogin.jsp" />
	</definition>

	<!-- OPENID TEMPLATE -->

	<definition name="openid-template" template="/WEB-INF/jsp/memo/portal/web/server/view/OpenidTemplate.jsp" />

	<definition name="/login/openid/setup" extends="openid-template">
		<put-attribute name="body" value="/WEB-INF/jsp/memo/portal/web/server/login/OpenIDLoginController_doSetup.jsp" />
	</definition>

	<definition name="/login/openid/verify" extends="openid-template">
		<put-attribute name="body" value="/WEB-INF/jsp/memo/portal/web/server/login/OpenIDLoginController_doVerify.jsp" />
	</definition>

	<!-- EXCEPTION TEMPLATE -->

	<definition name="exception-template" template="/WEB-INF/jsp/memo/domain/web/server/view/ExceptionTemplate.jsp" />

	<!-- view name defined in memo-domain-mvc.xml -->
	<definition name="/web/any-exception" extends="exception-template">
		<put-attribute name="body" value="/WEB-INF/jsp/mojo/web/view/AnyException.jsp" />
	</definition>

	<!-- view name defined in memo-domain-mvc.xml -->
	<definition name="/web/web-exception" extends="exception-template">
		<put-attribute name="body" value="/WEB-INF/jsp/mojo/web/view/WebException.jsp" />
	</definition>

